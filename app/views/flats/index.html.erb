<div class="container">
    <div class="d-flex justify-content: center;">
      <% @flats.each do |flat| %>
      <div class="card m-3" style="width: 30vw;">
        <img src="<%= flat.image %>" class="card-img-top sizing" alt="<%= flat.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.description %>, localisation 📍: <%= flat.address %></p>
          <%= flat.price %> €/nuit<br><br>
          <%= link_to "Voir l'appartement", flat_path(flat), class:"btn btn-success text-white" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
